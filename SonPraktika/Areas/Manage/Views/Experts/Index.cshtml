@using SonPraktika.Models;
@model List<Experts>

@{
    var count = 0;
}
<div class="container">

    <table class="table">
        <a class=" btn btn-primary" asp-action="Create">Create</a>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Photo</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Fullname</td>
                    <td>@item.Description</td>
                    <td>
                       <image src="/upload/@item.PhotoUrl" style="width:100px"></image>
                    </td>

                    <td>
                       <a class=" btn btn-secondary" asp-route-id="@item.Id" asp-action="Update" >Update</a>
                        <a class=" btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>