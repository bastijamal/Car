@using SonPraktika.Models;
@model Experts

<div class="container">

    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Fullname">Fullname</label>
            <input asp-for="Fullname" class="form-control" placeholder="Enter fullname">
            <span asp-validation-for="Fullname"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for ="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description"></span>

        </div>


        <div class="form-group">
            <label asp-for="ImgFile">Photo</label>
            <input asp-for="ImgFile" class="form-control" placeholder="Photo">
            <span asp-validation-for="ImgFile"></span>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
